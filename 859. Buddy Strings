class Solution {
    //Time O(n), Space O(1)
    public boolean buddyStrings(String s, String goal) {
        if(s.length() != goal.length()){
            return false;
        }
        if(s.equals(goal)){
            int[] freq = new int [26];
            for(int i = 0; i < s.length(); i++){
                freq[s.charAt(i)-'a']++;
                if(freq[s.charAt(i)-'a'] == 2){
                    return true;
                }
            }
            return false;
        }

        int firstInd = -1, secondInd = -1;
        for(int i = 0; i < s.length(); i++){
            if(s.charAt(i) != goal.charAt(i)){
                if(firstInd == -1){
                    firstInd = i;
                } else if (secondInd == -1){
                    secondInd = i;
                } else {
                    return false;
                }
            }
        }
        if(secondInd== -1){
            return false;
        }

        return s.charAt(firstInd) == goal.charAt(secondInd) && 
            s.charAt(secondInd) == goal.charAt(firstInd);
    }
}
